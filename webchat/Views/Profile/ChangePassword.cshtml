@{
    ViewData["Title"] = "Change Password";
    ViewData["HideNavbar"] = true;
    ViewData["HideFooter"] = true;
}

<div class="login-container">
    <div class="welcome-section">
        <h1>Welcome to<br>Student Portal</h1>
        <p>Change your password</p>
        <img src="~/images/招聘矢量插画人物场景插画招聘1100924黑与白-01 copy 1.png" alt="Illustration" class="illustration">
    </div>

    <div class="login-section">
        <h1>Change Password</h1>
        <p>Please enter your current password and new password.</p>

        <form asp-action="ChangePassword" asp-controller="Profile" method="post">
            <div class="mb-3">
                <label for="oldPassword">Current password</label>
                <input type="password" id="oldPassword" name="oldPassword" class="form-control" required />
                <span class="text-danger" data-valmsg-for="currentPassword" data-valmsg-replace="true"></span>
            </div>

            <div class="mb-3">
                <label for="newPassword">New Password</label>
                <input type="password" id="newPassword" name="newPassword" class="form-control" required />
                <span class="text-danger" data-valmsg-for="newPassword" data-valmsg-replace="true"></span>
            </div>

            <div class="mb-3">
                <label for="confirmPassword" class="form-label">Confirm New Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-login w-100">Change Password</button>
        </form>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info mt-3">
                @ViewBag.Message
            </div>
        }

    </div>
</div>