@model IEnumerable<User>

<table class="styled-table m-auto w-75 mt-5">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
            <th>Profile Picture</th>
            <th>Created At</th>
            <th>Is Admin</th>
            <th>NickName</th>
            <th>Gender</th>
            <th>Country</th>
            <th>Language</th>
            <th>TimeZone</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Id</td>
                <td>@x.Username</td>
                <td>@x.Email</td>
                <td>
                    @if (!string.IsNullOrEmpty(x.ProfilePicture))
                    {
                        <img src="@x.ProfilePicture" alt="Profile Picture" width="50" height="50" class="rounded-circle" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@x.CrearetedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(x.IsAdmin.Equals("true", StringComparison.OrdinalIgnoreCase) || x.IsAdmin == "1" ? "Yes" : "No")</td>
                <td>@x.NickName</td>
                <td>@x.Gender</td>
                <td>@x.Country</td>
                <td>@x.Language</td>
                <td>@x.TimeZone</td>
                <td>
                    <a class="btn-delete" href="@Url.Action("Delete", "Login", new { id = x.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


 
<style>
    
    body {
        background-color: #4e4376;
        background-size: cover;
        width:2500px;
    }

 
    .styled-table {
        border-collapse: collapse;
        margin: 25px 0;
        font-size: 18px;
         
        background: #fff;
        color: #333;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
    }

        .styled-table thead tr {
            background: linear-gradient(90deg, #ff6f61, #de6262);
            color: #ffffff;
            text-align: center;
            font-weight: bold;
        }

        .styled-table th,
        .styled-table td {
            padding: 15px 20px;
            text-align: center;
        }

        .styled-table tbody tr {
            border-bottom: 1px solid #dddddd;
            transition: all 0.3s ease-in-out;
        }

            .styled-table tbody tr:nth-of-type(even) {
                background: #f3f3f3;
            }

            .styled-table tbody tr:hover {
                background: #ffebcc;
                transform: scale(1.02);
            }

    
    .btn-delete {
        background: linear-gradient(90deg, #ff416c, #ff4b2b);
        color: white;
        padding: 10px 20px;
        border-radius: 25px;
        text-decoration: none;
        font-weight: bold;
        transition: all 0.3s ease-in-out;
    }

        .btn-delete:hover {
            background: linear-gradient(90deg, #ff4b2b, #ff416c);
            color: #000;
            box-shadow: 0px 4px 10px rgba(255, 75, 43, 0.5);
        }
</style>
