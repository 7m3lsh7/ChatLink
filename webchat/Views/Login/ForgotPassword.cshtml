@{
    ViewData["Title"] = "Forgot Password";
    ViewData["HideNavbar"] = true;
    ViewData["HideFooter"] = true;
}

<div class="login-container">
    <div class="welcome-section">
        <h1>Welcome to<br>Student Portal</h1>
        <p>Reset your password</p>
        <img src="~/images/招聘矢量插画人物场景插画招聘1100924黑与白-01 copy 1.png" alt="Illustration" class="illustration">
    </div>
    <div class="login-section">
        <h1>Forgot Password</h1>
        <p>Enter your email to reset your password</p>

        <form asp-action="ForgotPassword" asp-controller="Login" method="post">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Enter your Email" required>
                <span class="text-danger" data-valmsg-for="email" data-valmsg-replace="true"></span>
            </div>

            <button type="submit" class="btn btn-login w-100">Reset Password</button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Index" asp-controller="Login" class="text-muted">Back to Login</a>
        </div>
    </div>
</div>


<!-- Add Validation Scripts -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}