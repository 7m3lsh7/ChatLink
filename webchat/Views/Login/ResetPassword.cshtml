@{
    ViewData["Title"] = "Reset Password";
    ViewData["HideNavbar"] = true;
    ViewData["HideFooter"] = true;
}

<div class="login-container">
    <div class="welcome-section">
        <h1>Welcome to<br>Student Portal</h1>
        <p>Reset your password</p>
        <img src="~/images/招聘矢量插画人物场景插画招聘1100924黑与白-01 copy 1.png" alt="Illustration" class="illustration">
    </div>

    <div class="login-section">
        <h1>Reset Password</h1>
        <p>Please enter your new password.</p>

        <form asp-action="ResetPassword" method="post" id="resetPasswordForm">
            <input type="hidden" name="token" value="@ViewBag.Token" />
            <input type="hidden" name="email" value="@ViewBag.Email" />

            <div class="mb-3">
                <label for="newPassword" class="form-label">New Password</label>
                <input type="password" id="newPassword" name="newPassword" class="form-control" placeholder="Enter your new password" required>
                <span class="text-danger" data-valmsg-for="newPassword" data-valmsg-replace="true"></span>
            </div>

            <div class="mb-3">
                <label for="confirmPassword" class="form-label">Confirm Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Confirm your new password" required>
                <span class="text-danger" data-valmsg-for="confirmPassword" data-valmsg-replace="true"></span>
            </div>

            <button type="submit" class="btn btn-login w-100">Reset Password</button>
        </form>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info mt-3">
                @ViewBag.Message
            </div>
        }

        <div class="text-center mt-3">
            <a asp-action="Index" asp-controller="Login" class="text-muted">Back to Login</a>
        </div>
    </div>
</div>

<!-- Add Validation Scripts -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}