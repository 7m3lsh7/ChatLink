@{
    ViewData["Title"] = "Thank You";
}

<div class="thank-you-container">
    <div class="checkmark-circle">
        <div class="checkmark">✔️</div>
    </div>
    <h2>Thank You!</h2>

    <p>
        We are truly grateful for reaching out to us. Your message has been received, and our team will get back to you shortly.
        At <strong style="color:blueviolet">ChatLink</strong>, we value your trust and are committed to providing you with the best experience.
    </p>

    <a href="/" class="btn btn-primary">Return to Home</a>
</div>

<style>
    body {
        background-color: #4e4376;
        font-family: 'Arial', sans-serif;
    }
    .thank-you-container {
        background-color: #ffffff;
        border-radius: 15px;
        padding: 50px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 100px auto;
        text-align: center;
    }
    .checkmark-circle {
        width: 100px;
        height: 100px;
        background-color:black;
        border-radius: 50%;
        margin: 0 auto 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transform: scale(0.5);
        animation: popIn 0.6s ease-out 0.3s forwards;
    }
    .checkmark {
        font-size: 60px;
        color: #ffffff;
    }

    @@keyframes popIn {
        0%

    {
        opacity: 0;
        transform: scale(0.5);
    }
    100% {
        opacity: 1;
        transform: scale(1);
    }
    }
    
    h2 {
        color: #333333;
        font-size: 32px;
        margin-bottom: 15px;
    }
    p {
        color: #555555;
        font-size: 18px;
        line-height: 1.6;
        margin-bottom: 25px;
    }
    .btn-primary {
        background-color: black;
        border-color: #007bff;
        padding: 12px 30px;
        font-size: 16px;
        border-radius: 25px;
        transition: background-color 0.3s ease;
    }
        .btn-primary:hover {
            background-color: blueviolet;
            border-color: #0056b3;
        }
</style>