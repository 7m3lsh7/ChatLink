@{
    ViewData["Title"] = "Sign Up";
}

<div class="login-container">
    <div class="welcome-section">
        <h1>Welcome to<br>Student Portal</h1>
        <p>Login to access your account</p>
        <img src="~/images/招聘矢量插画人物场景插画招聘1100924黑与白-01 copy 1.png" alt="Illustration" class="illustration">
    </div>

    <div class="login-section">
        <h1>Sign up</h1>
        <p class="fs-5">Enter your account details</p>

      
        

        <form action="/SignUp/add" method="post">
            <div class="mb-3">
                <label for="Email" class="form-label">Email :</label>
                <input type="email" id="Email" name="Email" class="form-control" placeholder="Enter your Email " required>
            </div>

            <div class="mb-3">
                <label for="Username" class="form-label">Username :</label>
                <input type="text" id="Username" name="Username" class="form-control" placeholder="Enter your Username" required>
            </div>

            <div class="mb-3">
                <label for="PasswordHash" class="form-label">Password :</label>
                <input type="password" id="PasswordHash" name="PasswordHash" class="form-control" placeholder="Enter your password" required>
            </div>

            
            <br>
            <button type="submit" class="btn btn-login w-100">Submit</button>
        </form>

        <div class="signup-container">
            <span>Do you have an account? </span>
            <a href="/login" class="signup-btn m-2">Login</a>
        </div>
    </div>
</div>
