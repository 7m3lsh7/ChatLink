@{
    ViewData["Title"] = "Sign Up";
}

<div class="login-container ">
    <div class="preview-section mt-5">
        <div class="image-preview-container">
            <img id="imagePreview" src="/images/default-profile.png" alt="Profile Preview" class="image-preview" />
        </div>
    </div>

    <div class="login-section">
        <h1>Sign up</h1>
        <p class="fs-5">Upload your profile picture</p>

        <form action="/SignUp/Finish" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="ProfilePicture" class="form-label">Profile Picture:</label>
                <input type="file" id="ProfilePicture" name="ProfilePicture" class="form-control" accept="image/*" onchange="previewImage(event)" required>
            </div>

            <br>
            <button type="submit" class="btn btn-login w-100">Submit</button>
        </form>

        <div class="signup-container">
            <span>Do you have an account? </span>
            <a href="/login" class="signup-btn m-2">Login</a>
        </div>
    </div>
</div>

<script>
    function previewImage(event) {
        const file = event.target.files[0];
        const preview = document.getElementById('imagePreview');

        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                preview.src = e.target.result;
            };
            reader.readAsDataURL(file);
        }
    }
</script>

<style>
    body{
        background-color:#1a1a1a;
    }
    .preview-section {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

    .image-preview-container {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        overflow: hidden;
        background-color: #d9b3ff; 
        display: flex;
        align-items: center;
        justify-content: center;
        border: 3px solid #9b59b6; 
    }

    .image-preview {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .login-section {
        max-width: 400px;
        margin: 0 auto;
    }

    .btn-login {
        background-color: #9b59b6;
        color: #fff;
    }

    .btn-login:hover {
        background-color: #8e44ad;
    }
</style>
